// Test break and continue in loops

// Basic break in while
let i = 0;
while (i < 10) {
    if (i == 5) {
        break;
    }
    print(i);
    i = i + 1;
}
print("after while break");

// Basic continue in while
i = 0;
while (i < 5) {
    i = i + 1;
    if (i == 3) {
        continue;
    }
    print(i);
}
print("after while continue");

// Break in for loop
for (let j = 0; j < 10; j = j + 1) {
    if (j == 4) {
        break;
    }
    print(j);
}
print("after for break");

// Continue in for loop
for (let k = 0; k < 5; k = k + 1) {
    if (k == 2) {
        continue;
    }
    print(k);
}
print("after for continue");

// Break in for-in loop
let arr = [10, 20, 30, 40, 50];
for (let item in arr) {
    if (item == 30) {
        break;
    }
    print(item);
}
print("after for-in break");

// Continue in for-in loop
for (let item in arr) {
    if (item == 30) {
        continue;
    }
    print(item);
}
print("after for-in continue");

// Nested loop break (breaks inner only)
for (let x = 0; x < 3; x = x + 1) {
    for (let y = 0; y < 3; y = y + 1) {
        if (y == 1) {
            break;
        }
        print(x * 10 + y);
    }
}
print("after nested break");

// Break in switch (distinct from loop break)
let val = 2;
switch (val) {
    case 1:
        print("one");
        break;
    case 2:
        print("two");
        break;
    case 3:
        print("three");
        break;
}
print("after switch");

// Break in loop with switch inside
for (let m = 0; m < 3; m = m + 1) {
    switch (m) {
        case 0:
            print("case 0");
            break;
        case 1:
            print("case 1");
            break;
        default:
            print("default");
            break;
    }
    print(m);
}
print("after loop with switch");

print("done");
