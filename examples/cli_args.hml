// Example: Command-line argument handling in Hemlock
//
// Usage: ./hemlock examples/cli_args.hml [arguments...]
//
// This demonstrates accessing command-line arguments via the 'args' array.
// args[0] is always the script name, args[1+] are the actual arguments.

print("Hemlock Command-Line Arguments Demo");
print("====================================");
print("");

// Convert length to string for concatenation
let len_str = "";
if (args.length == 0) { len_str = "0"; }
if (args.length == 1) { len_str = "1"; }
if (args.length == 2) { len_str = "2"; }
if (args.length == 3) { len_str = "3"; }
if (args.length == 4) { len_str = "4"; }
if (args.length == 5) { len_str = "5"; }
if (args.length >= 6) { len_str = "6+"; }
print("Total arguments: " + len_str);
print("Script name: " + args[0]);
print("");

if (args.length == 1) {
    print("No command-line arguments provided.");
    print("Try running: ./hemlock examples/cli_args.hml arg1 arg2 arg3");
} else {
    print("Arguments provided:");
    let i = 1;
    while (i < args.length) {
        print("  " + args[i]);
        i = i + 1;
    }
}
